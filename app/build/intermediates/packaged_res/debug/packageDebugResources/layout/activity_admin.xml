<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg"

    >

    <TextView
        android:id="@+id/admin_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_options"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/admin_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/select_from_the_following_admin_options"
        app:layout_constraintTop_toBottomOf="@id/admin_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="16dp"

        />

    <Button
        android:id="@+id/user_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_management"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/admin_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"
    />
    <Button
        android:id="@id/usage_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/view_app_usage_reports"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/user_management"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/all_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/all_properties"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/usage_report"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/all_contracts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/view_contracts"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/all_properties"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/approve_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/approve_new_users"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/all_contracts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"/>


    <Button
        android:id= "@+id/deploy_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/deploy_contracts"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/approve_users"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_button_color"

        />

    <Button
        android:id="@+id/contract_deployment_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contract_deployment_interval"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deploy_contract"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"
        />


    <Button
        android:id="@+id/contract_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/view_details_of_deployed_contracts"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contract_deployment_interval"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/log_out"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/contract_details"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/primary_button_color"

        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>