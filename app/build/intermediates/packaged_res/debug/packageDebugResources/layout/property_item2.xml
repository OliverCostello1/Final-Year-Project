<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Property ID -->
        <TextView
            android:id="@+id/propertyIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property ID"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <!-- Eircode -->
        <TextView
            android:id="@+id/eircodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eircode"
            android:textSize="14sp"/>

        <!-- Link -->
        <TextView
            android:id="@+id/linkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textSize="14sp"
            android:linksClickable="true"
            android:autoLink="web"/>

        <!-- Asking Price -->
        <TextView
            android:id="@+id/askingPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asking Price"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/auctioneer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auctioneer ID:"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/auctioneerWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asking Price"
            android:textSize="14sp"/>

        <!-- Current Bid -->
        <TextView
            android:id="@+id/currentBidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Bid"
            android:textSize="14sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
