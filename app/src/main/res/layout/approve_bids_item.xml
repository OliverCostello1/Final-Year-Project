<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/bid_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bid_id_label"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/property_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/property_id_text"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bid_amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bid_amount"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/bid_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bid_time"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/bidder_wallet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bidder_wallet"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/bid_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bid_status"
        android:textSize="14sp"
        android:layout_marginTop="14sp"/>

    <!-- Use a horizontal LinearLayout for the buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/approve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/approve"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/deny_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deny"/>

    </LinearLayout>

</LinearLayout>
