<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/wallet_address_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wallet_address"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/f_name_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f_name"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/wallet_address_admin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/l_name_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/l_name"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/f_name_admin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/role_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role_string"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/l_name_admin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/delete_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/delete_user_text"
        app:layout_constraintTop_toBottomOf="@id/role_admin"
        app:layout_constraintStart_toStartOf="parent"

        />

</LinearLayout>
