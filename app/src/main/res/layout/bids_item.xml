<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/bid_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text= "@string/bid_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wallet_address_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/your_wallet"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/bid_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/auctioneer_id_bid"
        android:autoLink="web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auctioneeer_id_bid"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/wallet_address_bid"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id = "@id/auctioneer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auctioneer_id_format"
        android:textSize = "16sp"
        app:layout_constraintTop_toBottomOf="@id/link"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id = "@+id/bid_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asking_price_format"
        android:textSize = "16sp"
        app:layout_constraintTop_toBottomOf="@id/auctioneer_id"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id = "@id/current_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_bid_format"
        android:textSize = "16sp"
        app:layout_constraintTop_toBottomOf="@id/bid_amount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="Enter Bid"
        android:hint= "@string/time_submitted"
        app:layout_constraintTop_toBottomOf="@id/current_bid"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>